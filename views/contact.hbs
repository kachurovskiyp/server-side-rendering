<h2>Contact me</h2>
{{#if isSent}}
<div class="isSent">
  <p>
    The message has been sent!
    File {{file.originalname}} has been saved
  </p>
</div>
{{/if}}

{{#if isError}}
<div class="isError">
  <p>You can't leave fields empty!</p>
</div>
{{/if}}

<form enctype="multipart/form-data" action="/contact/send-message" method="POST">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <input type="file" name="poster" accept="image/png, image/jpeg, image/jpg, image/gif" />
  <button type="submit">Send message</button>
</form>